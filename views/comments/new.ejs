<% include ../partials/header %>
<div class="container">  
    <div class="row">
        <h2 style="text-align:center;">Add a new Comment to <%= campground.name %></h2>
        <div class="jumbotron" style="width: 50%; margin: 30 auto;">
            
            <form action="/campgrounds/<%=campground._id%>/comments/" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Enter Text"></input>
                </div>
                
                <div class="form-group">
                    <button style="display:block;" class="btn btn-lg btn-primary">Submit a New Campground!</button>
                </div>
            </form>
            
        </div>
    </div>
</div>


<% include ../partials/footer %>