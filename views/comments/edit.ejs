<% include ../partials/header %>
<div class="container">  
    <div class="row">
        <h2 style="text-align:center;">Edit your comment</h2>
        <div class="jumbotron" style="width: 50%; margin: 30 auto;">
            
            <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>"</input>
                </div>
                <div class="form-group">
                    <button style="display:block;" class="btn btn-lg btn-primary">Update!</button>
                </div>
            </form>
            
        </div>
    </div>
</div>


<% include ../partials/footer %>