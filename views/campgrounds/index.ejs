<% include ../partials/header %>
<div class="container">
    
    <div class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>    
            <p>This is a collection of unique campgrounds across the world!</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
             </p>
        </div>
    </div>
    
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(camp){  %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <image src="<%= camp.image %>"></image>
                <div class="caption">
                       <h4 class="caption"><%=camp.name%></h4>
                </div>
                <p>
                    <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
            
        </div>
        
        <% }); %>
    </div>
    
    <a href="\">Go Back</a>
</div>

<% include ../partials/footer %>